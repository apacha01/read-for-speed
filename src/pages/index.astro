---
import Layout from "../layouts/Layout.astro";
---

<Layout
	title="Read For Speed"
	description="A word by word reader to improve read faster. If you don't move your eyes, you can read as fast as your brain processes the information, which is really fast."
>
	<main class="w-full h-full px-12 py-20 flex justify-center">
		<section class="flex">
			<!-- header icons -->
		</section>
		<section class="flex flex-col gap-6 items-center">
			<div
				class="text-6xl text-center px-32 py-4 border border-black mt-auto"
			>
				Word
			</div>
			<button
				class="text-9xl text-center py-16 px-32 border border-black mt-auto"
			>
				Play / Pause
			</button>
		</section>
		<section>
			<!-- text input -->
		</section>
	</main>
</Layout>
